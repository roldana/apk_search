<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/appImg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="App Image" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="App Name"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/appImg"
        app:layout_constraintTop_toTopOf="@+id/appImg"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/appDev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="by [Developer]"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/appName"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <TextView
        android:id="@+id/appUploadedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploaded date"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/appDev"
        app:layout_constraintLeft_toLeftOf="@+id/appName" />

    <TextView
        android:id="@+id/appSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX.XX MB"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/appDownloadNumber"
        app:layout_constraintRight_toRightOf="@+id/appDownloadNumber"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/appDownloadNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxx downloads"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="13dp"
        app:layout_constraintVertical_bias="0.51" />
</android.support.constraint.ConstraintLayout>