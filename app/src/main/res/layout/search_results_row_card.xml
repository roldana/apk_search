            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="@+id/appName"-->
            <!--app:srcCompat="@drawable/download" />-->
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>